@page "/dicegame"


<div class="container-fluid ">
    <div class="row justify-content-center">
        <div class="col">
            <h1 class="text-center">Dice Roller:</h1>
            <hr />
        </div>
    </div>

    <div class="row justify-content-center">
        <div class="col-xs col-sm col-md-10 col-lg-8">
            <h5 class="text-center">
                Simple application to roll a pair of dice. Future updates will contain more fleshed out games & UI.
            </h5>
        </div>
    </div>

    <hr />
    <div class="text-center ">

        <div class="row py-3">
            <div class="col-2"></div>
            <div class="col-8">
                <button @onclick="RollTwoDice" class="btn btn-primary btn-block">LETS ROLL</button>
            </div>
            <div class="col-2"></div>
        </div>

        @if (dieOne.RollValue > 0)
        {
            <div class="row py-3">
                <div class="col">                  
                    <h3>You rolled a @dieOne.RollValue and a @dieTwo.RollValue</h3>                  
                </div>
            </div>
        }

    </div>
</div>




@code {
    //Creating a class of dice with a property describing a rolled die's value.
    public class Die
    {
        public int RollValue { get; set; }
    }

    /*
     - random is a variable created from the Random Class. Combined with .Next(1,7), random will assign a random non-negative integer between 1-6 (7 is upper bound).
     - The random non-negative integer b/w 1-6 is then assigned to the RollValue property for each instantiated die. 
     - For two dice, this method works but might get out of hand if someone wanted to roll lots of dice, or multiple sets of dice. 
     */ 
    Random random = new Random();
    Die dieOne = new Die();
    Die dieTwo = new Die();
    //Method to "roll" the dice
    void RollTwoDice()
    {
        dieOne.RollValue = random.Next(1, 7);
        dieTwo.RollValue = random.Next(1, 7);

    }
}













