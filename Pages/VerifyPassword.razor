@page "/verify"


<div class="container-fluid ">
    @*Title of Challenge*@
    <div class="row justify-content-center">
        <div class="col">
            <h1 class="text-center">Verify Password:</h1>
            <hr />
        </div>
    </div>

    <div class="row justify-content-center">
        <div class="col-xs col-sm col-md-10 col-lg-8">
            <h5 class="text-center">
                Form built with bootstrap utilizing data binding with asp.net  will check if a user's password meets the minimum requirements to be eligible.
                An eligible password must include the following requirements:
            </h5>
            <br />
            <ul class="h6">
                <li>at least 8 characters long</li>
                <li>contains lowercase letters</li>
                <li>contains uppercase letters</li>
                <li>contains numerical digits</li>
                <li>contains special characters like #, ?, or !</li>
         
            </ul>


        </div>
    </div>

    <hr />

    <div class="text-center">
        <form>
            <div class="form-group">
                <label for="exampleInputEmail1">Email address</label>
                <input type="email" class="form-control" bind="@emailAddress" aria-describedby="emailHelp" placeholder="JohnDoe@email.com">
                <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
            </div>
            <div class="form-group">
                <label for="exampleInputPassword1">Password</label>
                <input type="password" class="form-control" bind="@password" placeholder="Password">
            </div>
            <div class="form-check">
                <input type="checkbox" class="form-check-input " id="exampleCheck1">
                <label class="form-check-label pb-3" for="exampleCheck1">Check me out</label>
            </div>
            <button type="submit" class="btn btn-primary">Submit</button>
        </form>
    </div>
</div>

<br />




@code {
    //Local variables
    string emailAddress;
    string password;

    int score = 0;


    int minLength;
    string uppercase;
    string lowercase;
    string digits;

    //Capture input from the user


}











